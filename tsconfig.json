{
  "compilerOptions": {
    "outDir": "dist",          
    "module": "ESNext",         
    "target": "ES2017",         
    "lib": ["ES2017", "DOM"],   
    "declaration": true,        
    "declarationMap": true,     
    "sourceMap": true,          
    "strict": true,             
    "esModuleInterop": true,    
    "skipLibCheck": true,       
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],           
  "exclude": ["node_modules", "dist"]
}
